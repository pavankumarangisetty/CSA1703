def water_jug_problem(capacity_a, capacity_b, target):
    jug_a = 0
    jug_b = 0

    while jug_a != target and jug_b != target:
        print(f"Jug A: {jug_a} / {capacity_a}, Jug B: {jug_b} / {capacity_b}")

        if jug_a == 0:
           
            jug_a = capacity_a
        elif jug_b == capacity_b:
            # Empty jug B if it's full
            jug_b = 0
        else:
          
            space_in_b = capacity_b - jug_b
            if jug_a <= space_in_b:
                jug_b += jug_a
                jug_a = 0
            else:
                jug_a -= space_in_b
                jug_b = capacity_b

    print(f"Jug A: {jug_a} / {capacity_a}, Jug B: {jug_b} / {capacity_b}")
    print("Goal achieved!")


jug_capacity_a = 5
jug_capacity_b = 3
target_amount = 1

water_jug_problem(jug_capacity_a, jug_capacity_b,target_amount)
